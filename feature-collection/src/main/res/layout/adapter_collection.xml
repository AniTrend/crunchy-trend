<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="co.anitrend.support.crunchyroll.domain.collection.entities.CrunchyCollection" />
        <import type="co.anitrend.support.crunchyroll.feature.collection.presenter.CollectionPresenter" />

        <variable
                name="entity"
                type="CrunchyCollection" />
        <variable
                name="presenter"
                type="CollectionPresenter" />
    </data>

    <com.google.android.material.card.MaterialCardView
            android:id="@+id/container"
            android:background="?cardColor"
            android:orientation="vertical"
            tools:padding="@dimen/xl_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentPadding="@dimen/xl_margin"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{presenter.titleWithSeason(entity)}"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    tools:text="@sample/collection_list.json/data/name_with_format"/>

            <Space
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/lg_margin" />

            <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{entity.description}"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                    tools:text="@sample/collection_list.json/data/description"/>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>