<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data class="co.anitrend.support.crunchyroll.feature.catalog.databinding.AdapterCatalogHeaderBinding">
        <variable
                name="title"
                type="String" />
    </data>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/xl_margin"
            android:layout_marginBottom="@dimen/xl_margin">

        <co.anitrend.arch.ui.view.text.SingleLineTextView
                android:id="@+id/catalogHeadingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:text="@{title}"
                tools:text="Heading" />

        <co.anitrend.arch.ui.view.text.SingleLineTextView
                android:id="@+id/catalogActionSeeAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textColor="@color/colorAccent"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                tools:text="@string/label_text_action_see_all" />
    </FrameLayout>
</layout>