<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/user_account_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_xl"
            android:layout_marginEnd="@dimen/spacing_xl"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/label_alternative_login"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" />

    <Space
            android:layout_width="wrap_content"
            android:layout_height="@dimen/lg_margin" />

    <com.google.android.material.chip.Chip
            android:id="@+id/skipLoginButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/label_action_start_anonymous_session"
            app:chipIcon="@drawable/ic_verified_user_grey_600_24dp"
            />

</LinearLayout>