<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="co.anitrend.support.crunchyroll.feature.series.presenter.SeriesDetailPresenter" />
        <import type="co.anitrend.support.crunchyroll.feature.series.viewmodel.SeriesDetailViewModel" />

        <variable
                name="presenter"
                type="SeriesDetailPresenter" />
        <variable
                name="viewModel"
                type="SeriesDetailViewModel" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/xl_margin"
            android:orientation="vertical">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <co.anitrend.arch.ui.view.text.SingleLineTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    android:text="@string/label_information" />

            <co.anitrend.arch.ui.view.text.SingleLineTextView
                    android:id="@+id/seriesSeasons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textColor="@color/colorAccent"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    android:text="@string/label_seasons" />
        </FrameLayout>

        <Space
                android:layout_width="wrap_content"
                android:layout_height="@dimen/xl_margin" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/md_margin"
                android:baselineAligned="false">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                <co.anitrend.arch.ui.view.text.SingleLineTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_total_seasons"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"/>

                <co.anitrend.arch.ui.view.text.SingleLineTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{presenter.collectionCount(viewModel.seriesModel)}"
                        android:textIsSelectable="true"
                        tools:text="@sample/series_detail.json/collection_count" />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                <co.anitrend.arch.ui.view.text.SingleLineTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_total_episodes"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"/>

                <co.anitrend.arch.ui.view.text.SingleLineTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{presenter.mediaCount(viewModel.seriesModel)}"
                        android:textIsSelectable="true"
                        tools:text="@sample/series_detail.json/media_count" />
            </LinearLayout>

        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>