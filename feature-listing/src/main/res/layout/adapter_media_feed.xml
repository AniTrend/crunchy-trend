<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
                name="entity"
                type="co.anitrend.support.crunchyroll.domain.episode.entities.CrunchyEpisodeFeed"
        />
    </data>

    <com.google.android.material.card.MaterialCardView
            android:clickable="true"
            android:focusable="true"
            android:foreground="?selectableItemBackground"
            android:layout_margin="@dimen/lg_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardPreventCornerOverlap="false"
            app:cardBackgroundColor="?cardColor"
            app:cardElevation="@dimen/sm_margin"
            app:cardCornerRadius="@dimen/md_margin">

        <co.anitrend.arch.ui.view.image.SupportImageView
                android:id="@+id/media_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:imageUrl="@{entity}"
                app:aspectRatio=".57"
                tools:src="@sample/franxx_banner.png" />

        <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_gravity="top|end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_margin="@dimen/lg_margin"
                android:background="@drawable/background_bubble_transparent">

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/media_duration"
                    android:textColor="@color/colorWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@{entity.episodeDuration}"
                    tools:text="23:45"/>

            <Space
                    android:layout_width="@dimen/md_margin"
                    android:layout_height="wrap_content" />

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/ic_timelapse_24dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <co.anitrend.arch.ui.view.text.SingleLineTextView
                android:id="@+id/media_title"
                android:layout_gravity="bottom|center_horizontal"
                android:textColor="@color/colorWhite"
                android:padding="@dimen/lg_margin"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorScrim"
                android:text="@{entity.title}"
                tools:text="Darling in the franxx"/>

    </com.google.android.material.card.MaterialCardView>

</layout>