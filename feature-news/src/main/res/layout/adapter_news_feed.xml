<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
                name="entity"
                type="co.anitrend.support.crunchyroll.domain.news.entities.CrunchyNews"
        />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/container"
            android:background="?cardColor"
            android:orientation="vertical"
            android:padding="@dimen/xl_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
                android:id="@+id/media_news_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:text="@{entity.title}"
                tools:text="@sample/news.json/title"/>

        <Space android:layout_width="wrap_content"
               android:layout_height="@dimen/md_margin"/>

        <co.anitrend.arch.ui.view.text.SingleLineTextView
                android:id="@+id/media_news_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:text="@{entity.subTitle}"
                tools:text="@sample/news.json/subTitle"/>

        <Space android:layout_width="wrap_content"
               android:layout_height="@dimen/lg_margin"/>

        <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <co.anitrend.arch.ui.view.image.SupportImageView
                    android:layout_width="@dimen/series_image_sm"
                    android:layout_height="@dimen/series_image_sm"
                    android:layout_gravity="center_vertical"
                    app:imageUrl="@{entity.image}"
                    tools:src="@sample/thumbnail"
                    tools:scaleType="centerCrop"
                    />

            <Space android:layout_width="@dimen/xl_margin"
                    android:layout_height="wrap_content"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/media_news_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="5"
                        android:ellipsize="end"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="@sample/news.json/description" />


                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/media_news_publication"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:longDate="@{entity.publishedOn}"
                        tools:text="@sample/news.json/publishDate" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>